<h1>admin顧客一覧画面</h1>

<div class="col-md-8 mx-auto">
  <div class ="row mb-3">
      <h4 class="text-center bg-light">会員一覧</h4>
  </div>


  <table class ="table border-bottom">
    <thead class="thead-light">
      <tr　>
        <th style="width: 15%">会員ID</th>
        <th style="width: 45%">氏名</th>
        <th style="width: 20%">メールアドレス</th>
        <th style="width: 20%">ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%= link_to admin_customer_path(customer) do %>
              <%= customer.last_name %><%= customer.first_name %>
          <% end %>
        </td>
        <td><%= customer.email %></td>
        <td><%= customer.is_active %></td>
      </tr>
      <% end %>
    </tbody>

  </table>
</div>

