<div class="col-md-8 mx-auto">
  <div class ="row justify-content-between mb-4">
    <div class="col-md-3">
      <h4 class="text-center bg-light">商品一覧</h4>
    </div>
    <div class="col-md-1 ">
      <%=link_to new_admin_item_path do %>
        <button class="btn bg-white rounded-circle shadow mx-auto">+</button>
      <%end%>
    </div>
  </div>


  <table class ="table border-bottom">
    <thead class="thead-light ">
      <tr　class="">
        <th style="width: 15% ">商品ID</th>
        <th style="width: 45%">商品名</th>
        <th style="width: 20%">税抜価格</th>
        <th style="width: 20%">ステータス</th>
      </tr>
    </thead>

    <tbody >
      <% @items.each do |item| %>
      <tr >
        <td><%= item.id %></td>
        <td class="">
          <%= link_to admin_item_path(item) do %>
              <%= item.name %>
          <% end %>
        </td>
        <td><%= item.price %></td>
        <td><%= item.is_active %></td>
      </tr>
      <% end %>
    </tbody>

  </table>
</div>

