<h1>admin商品編集画面</h1>
  
  <div class="col-md-8 mx-auto">
    <div class ="row mb-3">
          <h4 class="text-center bg-light">商品詳細</h4>
    </div>

    <%= form_with model: @item, url:admin_item_path, local:true do |f| %>
      <h4>商品画像</h4>
      <%= f.attachment_field :image %>
      <h4>商品名</h4>
      <%= f.text_field :name %>
      <h4>商品説明</h4>
      <%= f.text_area :introduction %>
      <h4>税抜価格</h4>
      <%= f.text_field :price %>
      <h4>販売ステータス</h4>
      <%= f.label :is_active, '販売中', value: 1 %>
      <%= f.radio_button :is_active, :true, checked: true %>
    
      <%= f.label :is_active, '販売停止中', value: 0 %>
      <%= f.radio_button :is_active, :false %>
    
      <div class="text-center">
        <%= f.submit '変更を保存', class: 'btn btn-success btn-lg' %>
    
      </div>
    
    <% end %>
  </div>
    