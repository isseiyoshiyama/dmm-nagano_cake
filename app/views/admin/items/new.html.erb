<div class="col-md-8 mx-auto mt-4">
    <div class ="row mb-3">
          <h4 class="text-center bg-light">商品新規登録</h4>
    </div>

  <div class="text-center">
    <%= form_with model: @item, url:admin_items_path, local:true do |f| %>

    <table class ="table table-borderless center-block">
      <tr class="">
        <th class="">商品画像</th><td class=""><%= f.attachment_field :image %></td>
      </tr>
      <tr>
        <th class="">商品名</th><td class=""><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th class="">商品説明</th><td class=""><%= f.text_area :introduction %></td>
      </tr>
      <tr>
        <th class="">税抜価格</th><td class=""><%= f.text_field :price %>円</td>
      </tr>
      <tr>
        <th class="">販売ステータス</th>
        <td class="">
          <%= f.label :is_active, '販売中', value: 1 %>
          <%= f.radio_button :is_active, :true, checked: true %>

          <%= f.label :is_active, '販売停止中', value: 0 %>
          <%= f.radio_button :is_active, :false %>
        </td>
      </tr>
    </table>

      <div class="actions mt-4">
        <%= f.submit '新規登録', class: 'btn btn-success btn-md' %>
      </div>

    <% end %>

  </div>


</div>