<div class="col-md-8 mx-auto">
    <div class ="row mb-3">
          <h4 class="text-center bg-light">新規会員登録</h4>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>

      <table class ="table table-borderless">
          <tr>
            <th>名前</th>
            <td><%= f.label '(姓)' %><%= f.text_field :last_name, placeholder: "令和" %>　<%= f.label '(名)' %><%= f.text_field :first_name, placeholder: "道子" %></td>
          </tr>

          <tr>
            <th>フリガナ</th></th>
            <td><%= f.label '(セイ)' %><%= f.text_field :last_name_kana, placeholder: "レイワ" %>　<%= f.label '(メイ)' %><%= f.text_field :first_name_kana, placeholder: "ミチコ" %></td>
          </tr>

          <tr>
            <th>メールアドレス</th><td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %></td>
          </tr>

          <tr>
            <th>郵便番号(ハイフンなし)</th><td><%= f.text_field :postal_code, placeholder: "0000000" %></td>
          </tr>

          <tr>
            <th>住所</th><td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", size: "50" %></td>
          </tr>

          <tr>
            <th>電話番号(ハイフンなし)</th><td><%= f.text_field :telephone_number, placeholder: "00000000000" %></td>
          </tr>

          <tr>
            <th>パスワード(6文字以上)</th>
            <td>
              <%= f.password_field :password, autocomplete: "new-password" %>
            </td>
          </tr>

          <tr>
            <th>パスワード(確認用)</th>
            <td>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </td>
          </tr>

          <tr>
            <th></th>
            <td><%= f.submit "新規登録", class: 'btn btn-success btn-md' %></td>
          </tr>
      </table>

    <% end %>
    <%#= render "customers/shared/links" %>
  
  
  <div class ="row mb-3">
          <h4 class="text-center bg-light">既に登録済みの方</h4>
  </div>
    <p>
      <%= link_to "こちら", new_customer_session_path %>　からログインしてください。
    </p>
  
  </div>