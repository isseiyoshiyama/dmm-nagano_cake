<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header>
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">

          <a class="navbar-brand" href="/"><span>LOGO</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if customer_signed_in? %>
                <!--ここから以下のログアウト以外は後ほど見直す必要あり-->
                <li class="nav-item"><!--マイページへのルーティング記載 -->
                  <%= link_to "マイページ", about_path, class: 'nav-link' %>
                </li>
                <li class="nav-item"><!--商品一覧へのルーティング記載 -->
                  <%= link_to "商品一覧", about_path, class: 'nav-link' %>
                </li>
                <li class="nav-item"><!--カートへのルーティング記載 -->
                  <%= link_to "カート", about_path, class: 'nav-link' %>
                </li>
                <li class="nav-item"><!--ログアウトへのルーティング記載 -->
                  <%= link_to "logout", destroy_customer_session_path, method: :delete, class: 'nav-link' %>
                </li>

              <% elsif admin_signed_in? %>
                <!--ここから以下のログアウト以外は後ほど見直す必要あり-->
                <li class="nav-item"><!--マイページへのルーティング記載 -->
                  <%= link_to "商品一覧", about_path, class: 'nav-link' %>
                </li>
                <li class="nav-item"><!--商品一覧へのルーティング記載 -->
                  <%= link_to "会員一覧", about_path, class: 'nav-link' %>
                </li>
                <li class="nav-item"><!--カートへのルーティング記載 -->
                  <%= link_to "注文履歴一覧", about_path, class: 'nav-link' %>
                </li>
                <li class="nav-item"><!--ログアウトへのルーティング記載 -->
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link' %>
                </li>

              <% else %>
                <li class="nav-item"><!-- Aboutへのルーティング -->
                  <%= link_to "About", about_path, class: 'nav-link' %>
                </li>
                <li class="nav-item"><!-- 商品一覧へのルーティング -->
                  <%= link_to "商品一覧", about_path, class: 'nav-link' %>
                </li>
                <li class="nav-item"><!-- 新規登録へのルーティング -->
                  <%= link_to "新規登録", new_customer_registration_path, class: 'nav-link' %>
                </li>
                <li class="nav-item"><!-- ログインへのルーティング -->
                  <%= link_to "ログイン", new_customer_session_path, class: 'nav-link' %>
                </li>

              <% end %>
            </ul>
          </div>

        </div>
      </nav>

    </header>

    <main>
      <%= yield %>
    </main>


    <footer>

    </footer>
  </body>
</html>
