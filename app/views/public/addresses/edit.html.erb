
<div class="col-md-8 mx-auto">
    <div class ="row mb-3">
          <h4 class="text-center bg-light">配送先登録 / 一覧</h4>
    </div>

    <%= form_with model: @address, local:true do |f| %>

      <table class ="table table-borderless">
          <tr>
            <th>郵便番号(ハイフンなし)</th><td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th>住所</th><td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th>宛名</th><td><%= f.text_field :name %></td>
          </tr>

      </table>

      <div class="">
        <%= f.submit '編集内容を保存', class: 'btn btn-success btn-md' %>
      </div>

    <% end %>


  </div>