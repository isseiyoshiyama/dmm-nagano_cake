<h1>商品一覧（全<%= @items.count %>件）</h1>

<div class="container ">

  <div class="row mx-auto">


      <% @items.each do |item| %>

      <div class="col">
        <%= link_to item_path(item) do %>
          <%= attachment_image_tag item, :image, :fill, 200, 200, format: 'jpeg' %>
        <% end %>

        <p><%= item.name %></p>
        <p>¥<%= (item.price*1.1).floor %></p>
      </div>
      <% end %>


  </div>
</div>
