<h1>商品詳細</h1>

<div class="col-md-8 mx-auto">
  <div class ="row mb-3">
      <h4 class="text-center bg-light">商品詳細</h4>
    </div>

  <div class="row">
    <div class="col-md-4"><%= attachment_image_tag @item, :image, :fill, 300, 300, format: 'jpeg' %></div>


    <div class="col-md-5">
        <h1><%= @item.name %></h1>
        <p><%= @item.introduction %></p>
        <h3>¥<%= (@item.price*1.1).floor %></h3><p>(税込)</p>

         <div>
             <%= form_with model: @cart_item, url:cart_add_path, local:true do |f| %>
                 <%= f.hidden_field :item_id, value: @item.id %>
                 <%= f.select :amount, *[1..10] %>
                 <%= f.submit 'カートに入れる', class: 'btn btn-primary btn-sm' %>
             <% end %>
         </div>

    </div>

  </div>





</div>

