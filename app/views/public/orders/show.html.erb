<div class="col-md-8 mx-auto mt-4">
    <div class ="d-flex justify-content-between mb-3">
        <div>
          <h4 class="text-center bg-light">注文履歴詳細</h4>
        </div>
    </div>



    <div class="row">
      <div class="col-md-7">
          <h5>注文情報</h5>
        <table class="table table-bordered">
        <tr>
          <th class="bg-light">注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d')  %></td>
        </tr>
        <tr>
          <th class="bg-light">配送先</th><td>〒<%= @order.postal_code %><br><%= @order.address %><br><%= @order.name %></td>
        </tr>
        <tr>
          <th class="bg-light">支払方法</th><td><%= @order.payment_method %></td>
        </tr>

        </table>
      </div>

      <div class="col-md-5">
           <h5>請求情報</h5>
        <table class="table table-bordered">
        <tr>
          <th class="bg-light">商品合計</th><td><%= @order.total_fee - 800 %></td>
        </tr>
        <tr>
          <th class="bg-light">配送料</th><td>800</td>
        </tr>
        <tr>
          <th class="bg-light">ご請求額</th><td><%= @order.total_fee %></td>
        </tr>

        </table>

      </div>

    </div>

        <div class="row mb-2">
        <div class ="col-md-8">
            <h5 class="mr-2">注文内容</h5>
          <table class ="table table-bordered">
              <thead class="thead-light">
                <tr　>
                  <th>商品</th>
                  <th>単価(税込)</th>
                  <th>個数</th>
                  <th>小計</th>
                </tr>
              </thead>
                <tbody>
                    <% @order_items.each do |order_item| %>
                    <tr>
                      <td>
                        <%= order_item.item.name %>
                      </td>
                      <td><%= (order_item.item.with_tax_price).floor %></td>
                      <td><%= order_item.amount %></td>
                      <td><%= (order_item.item.with_tax_price).floor*order_item.amount %></td>

                    </tr>
                    <% end %>
                </tbody>


            </table>
        </div>
        </div>



</div>