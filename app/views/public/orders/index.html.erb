<div class="col-md-8 mx-auto mt-4">
    <div class ="d-flex justify-content-between mb-3">
        <div>
          <h4 class="text-center bg-light">注文履歴画面</h4>
        </div>
    </div>



    <div class="row">
      <div class="col-md-10 ">
        <table class ="table table-bordered">
          <thead class="thead-light">
            <tr　>
              <th>注文日</th>
              <th>配送先</th>
              <th>注文商品</th>
              <th>支払金額</th>
              <th>注文詳細</th>
            </tr>
          </thead>

          <tbody >
            <% @orders.each do |order| %>
            <tr >
              <td>
                <%#= attachment_image_tag cart_item, :image, :fill, 50, 50, format: 'jpeg' %>
                <%= order.created_at.strftime('%Y/%m/%d')  %>
              </td>
              <td>〒<%= order.postal_code %><br><%= order.address %><br><%= order.name %></td>
              <td>
                <% order.order_items.each do |order_item|  %>
                  <%= order_item.item.name %></br>
                <% end %>
              </td>
              <td><%= order.total_fee %>円</td>
              <td>
                <%= link_to "表示する", order_detail_path(order), class: 'btn btn-primary btn-sm' %>
                </td>
            </tr>
            <% end %>
          </tbody>

        </table>
      </div>
    </_div>



</div>